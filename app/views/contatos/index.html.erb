<p id="notice"><%= notice %></p>

<h1>Listando todos os Contatos</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Nome</th>
      <th>Telefone</th>
      <th>CPF</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contatos.each do |contato| %>
      <tr>
        <td><%= contato.id %></td>
        <td><%= contato.nome %></td>
        <td><%= contato.telefone %></td>
        <td><%= contato.cpf %></td>
        <td><%= link_to 'Show', contato %></td>
        <td><%= link_to 'Edit', edit_contato_path(contato) %></td>
        <td><%= link_to 'Destroy', contato, method: :delete, data: { confirm: 'vai dar merda!!!' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

